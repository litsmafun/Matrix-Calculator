{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-File",
                "${workspaceFolder}/build.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build with Make",
            "type": "shell",
            "command": "mingw32-make",
            "args": [],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build with batch",
            "type": "shell",
            "command": "${workspaceFolder}/build.bat",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["clean"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "${workspaceFolder}/build.ps1; if ($?) { cd build; ./MatrixCalculator.exe }"
            ],
            "group": "test",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
